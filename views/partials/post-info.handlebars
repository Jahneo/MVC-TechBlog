<article class="post">
  <div class="title">
    <a href="/post/{{id}}">{{title}}</a>
    </div>
    <div class="meta">
      by {{user.name}} post on {{format_date created_at}}
    <span>({{ post_content}})</span>
  </div>
  <div class="meta">
  <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
  </div>
</article>